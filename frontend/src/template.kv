ScreenManagement:
    WelcomeScreen:
    ConfScreen:
    TrainScreen:
    PredictScreen:

<WelcomeScreen>:
    name: 'welcome'
    Image:
        id: avatar
        pos_hint: {"center_y": .8}
        source: "images/logo.png"
        size_hint_y: None
        height: dp(120)
    MDLabel:
        text: "Welcome to SmartFed benchmark test.\nThe aim of this app is to demonstrate the features of SmartFed."
        markup: True
        halign: "center"
        pos_hint: {"center_y":.55}
        font_style: "Subtitle2"
        line_height: 1.5
        theme_text_color: "Primary"
        padding:[20,0]
    MDRaisedButton:
        text: "Choose your configuration"
        pos_hint: {"center_x": 0.5, "center_y":0.15}
        size_hint: .7,0.08
        on_press: app.root.current = 'conf'
        # on_press: root.manager.change_screen("conf")
    MDLabel:
        text: "Â© Copyright UM6P 2020"
        font_style: "Overline"
        theme_text_color: "Secondary"
        halign: "center"
        pos_hint: {"center_y":0.05}

<ConfScreen>:
    name: 'conf'
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: 'Preferences'
            left_action_items: [["account-cog", lambda x: app.callback()]]
            elevation:8
        MDLabel:
            text: "Parameter Server address"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y":.5}
            font_style: "Subtitle2"
            line_height: 1.5
            # size_hint: 1, 2
        MDBoxLayout:
            orientation: "horizontal"
            spacing: "40dp"
            padding: [40, 10, 40, 20]
            MDTextField:
                id: server_host
                hint_text: "IP Address"
                pos_hint: {"center_x": 0.5, "center_y":.5}
                halign: "center"
                mode: "rectangle"
            MDTextField:
                id: server_port
                hint_text: "Port"
                input_filter: 'int'
                size_hint: None, None
                pos_hint: {"center_x": 0.5, "center_y":.5}
                width: "50dp"
                halign: "center"
                mode: "rectangle"
        MDLabel:
            id: samples_label
            text: "Describe the performance of your device"
            halign: "center"
            font_style: "Subtitle2"
            line_height: 1.5
            # size_hint: 1, 1
        MDBoxLayout:
            padding: [50, 0, 0, 50]
            spacing: "50dp"
            pos_hint: {"center_x": .5}
            adaptive_size: True
            UIToggleButton:
                id: low_cap
                text: "Low"
                icon: "alpha-l-box"
                group: "preference"
            UIToggleButton:
                id: mod_cap
                text: "Moderate"
                icon: "alpha-m-box"
                group: "preference"
            UIToggleButton:
                id: pow_cap
                text: "Powerful"
                icon: "alpha-p-box"
                group: "preference"
        MDLabel:
            id: ds_label
            text: "Select your dataset"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y":.5}
            font_style: "Subtitle2"
            line_height: 1.5
        MDRoundFlatIconButton:
            text: "Open manager"
            icon: "folder"
            pos_hint: {'center_x': .5, 'center_y': .6}
            on_release: root.file_manager_open()
        MDLabel:
            text: "Set the maximum number of training samples your device can allow for training"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y":.5}
            font_style: "Subtitle2"
            line_height: 1.5
            size_hint: 1, 2
        MDTextField:
            id: samples_input
            spacing: "40dp"
            hint_text: "Number of samples"
            input_filter: 'int'
            mode: "rectangle"
            size_hint: .6, None
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y":.8}
        MDLabel:
            size_hint: 1, 1
        MDRaisedButton:
            text: 'Join training'
            size_hint: 1, 1
            pos_hint: {'center_x':0.5,'center_y':0.6}
            on_press:
                root.configure()
                root.manager.transition.direction = "left"

<TrainScreen>:
    name: 'train'
    on_enter: root.init_train()
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: 'Training'
            left_action_items: [["account-cog", lambda x: app.callback()]]
            elevation:8
        MDLabel:
            id: train_log
            text: "Wait please ..."
            padding: [20,0]
            line_height: 3
        MDRaisedButton:
            text: 'Disconnect'
            size_hint: 1, .1
            md_bg_color: app.theme_cls.error_color
            pos_hint: {'center_x':0.5,'center_y':0.1}
            on_press: root.disconnect()
        
<PredictScreen>:
    name: 'predict'
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: 'Training summary'
            left_action_items: [["switch", lambda x: app.callback()]]
            elevation:8
        MDLabel:
            id: train_summary
            text: 'Training finished.'
            padding: [50,0]
            line_height: 3
        MDRaisedButton:
            text: 'Start over'
            size_hint: 1, .1
            pos_hint: {'center_x':0.5,'center_y':0.1}
            on_press: root.manager.current = 'welcome'